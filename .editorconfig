# EditorConfig ayuda a mantener un estilo de codificaci√≥n consistente entre los editores y IDEs.
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

[*.{json,css,scss,html}]
indent_size = 2
